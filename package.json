{
  "name": "epi.today",
  "version": "1.0.0",
  "description": "what's on the calendar today at epitech?",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/app.js",
    "dev": "nodemon src/app.ts",
    "debug": "nodemon --inspect src/app.ts"
