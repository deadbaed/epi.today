  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.14",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.48.3",
    "nodemon": "^2.0.2",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pug": "^2.0.4",
    "request": "^2.88.0"
  },
  "nodemonConfig": {
    "restartable": "rs",
