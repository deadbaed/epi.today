extends ../layout

block content
  include ../navbar
  #main.container
    h1.text-center #{date}
    if events != 0
      for event in events
        .card
          .card-body
            if event.registered == true
              h5.card-title #{event.name} #[span.badge.badge-success Registered]
            else
              h5.card-title #{event.name} #[span.badge.badge-danger Not registered]
            h6.card-subtitle.mb-2.text-muted #{event.module}
            p.card-text maybe more info about event?
            p.card-text From #[span.badge.badge-primary #{event.time.start}] to #[span.badge.badge-secondary #{event.time.end}]
            a.card-link(href="#") See event on intra
    else
      .card
        .card-body
          h5.card-title No events ğŸ˜
          p.card-text You're free for today!
